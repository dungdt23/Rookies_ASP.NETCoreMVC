@using Rookies_ASP.NETCoreMVC.Models.Models;
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    var errorMessage = ViewData["errorMessage"] as string;
}
@model Person

<form asp-controller="Rookies" asp-action="Add" method="post">
    <h2>CREATE A NEW PERSON</h2>
    @* display error message *@
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <p1 style="color: red">@errorMessage</p1>
    }
    <div class="mb-3">
        <label for="firstName" class="form-label">First Name</label>
        <input type="text" class="form-control" id="firstName" name="FirstName" asp-for="FirstName">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="lastName" class="form-label">Last Name</label>
        <input type="text" class="form-control" id="lastName" name="LastName" asp-for="LastName">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="phoneNumber" class="form-label">Phone Number</label>
        <input type="text" class="form-control" id="phoneNumber" name="PhoneNumber" asp-for="PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="birthPlace" class="form-label">Birth Place</label>
        <input type="text" class="form-control" id="birthPlace" name="BirthPlace" asp-for="Birthplace">
        <span asp-validation-for="Birthplace" class="text-danger"></span>
    </div>
    <div class="form-check">
        <h5>Gender</h5>
        <input class="form-check-input" type="radio" name="gender" id="flexRadioMale" value="Male" asp-for="Gender">
        <label class="form-check-label" for="flexRadioMale">
            Male
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="gender" id="flexRadioFemale" value="Female" asp-for="Gender">
        <label class="form-check-label" for="flexRadioFemale">
            Female
        </label>
    </div>
    <div class="form-check">
        <h5>Is Graduated</h5>
        <input class="form-check-input" type="radio" name="isGraduated" id="flexRadioGraduated" value="True" asp-for="IsGraduated">
        <label class="form-check-label" for="flexRadioGraduated">
            Yes
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="isGraduated" id="flexRadioNotGraduated" value="False" asp-for="IsGraduated">
        <label class="form-check-label" for="flexRadioNotGraduated">
            No
        </label>
    </div>
    <div class="mb-3">
        <label for="dateOfBirth" class="form-label">Date Of Birth</label>
        <input type="date" id="dateOfBirth" class="form-control" name="DateOfBirth" asp-for="DateOfBirth">
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">CREATE</button>
</form>
